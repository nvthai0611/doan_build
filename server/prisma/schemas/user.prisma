// user.prisma

model User {
    id        Int      @id @default(autoincrement())
    email     String   @unique @db.VarChar(100)
    name      String?  @db.VarChar(50)
    password  String   @db.VarChar(100)
    status    Boolean  @default(true)
    create_at DateTime
    update_at DateTime
    Post      Post[]

    @@map("users") // chỉ định tạo ra bảng "users"
}
