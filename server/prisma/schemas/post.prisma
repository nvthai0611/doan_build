// post.prisma

model Post {
    id        Int      @id @default(autoincrement())
    title     String   @db.VarChar(255)
    content   String   @db.VarChar()
    author    User?    @relation(fields: [authorId], references: [id])
    authorId  Int?
    create_at DateTime
    update_at DateTime

    @@map("posts") // chỉ định tạo ra bảng "posts"
}
